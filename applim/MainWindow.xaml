<Window x:Class="applim.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="applim"
        Loaded="Window_Loaded"
        Closing="Window_Closing"
        >
    <Grid Grid.Row="3">
        <Grid.RowDefinitions>

            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="10" Orientation="Horizontal">
            <TextBlock Text="distance:" FontSize="20"></TextBlock>
            <TextBlock Text="0" x:Name="DistanceMessage" FontSize="20"/>
        </StackPanel>
        <StackPanel Grid.ColumnSpan="2" HorizontalAlignment="Right" Margin="10" Orientation="Horizontal">
            <TextBlock Text="angel:" FontSize="20"></TextBlock>
            <TextBlock Text="0" x:Name="AngelMessage" FontSize="20"/>
        </StackPanel>

        <Canvas x:Name="CanvasBody" Width="512" Height="424"></Canvas>
    </Grid>
</Window>
